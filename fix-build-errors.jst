// Funci√≥n para verificar y actualizar package.json
function updatePackageJson() {
  const packageJsonPath = path.join(ROOT_DIR, 'package.json');
  
  if (fs.existsSync(packageJsonPath)) {
    try {
      const packageJson = JSON.parse(fs.readFileSync(packageJsonPath, 'utf8'));
      
      // Asegurarse de que las dependencias necesarias est√©n instaladas
      const dependencies = packageJson.dependencies || {};
      const devDependencies = packageJson.devDependencies || {};
      
      const requiredDependencies = {
        "@radix-ui/react-dialog": "^1.0.5",
        "@radix-ui/react-label": "^2.0.2",
        "@radix-ui/react-switch": "^1.0.3",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.1.0",
        "tailwind-merge": "^2.2.1"
      };
      
      let dependenciesChanged = false;
      
      for (const [dep, version] of Object.entries(requiredDependencies)) {
        if (!dependencies[dep] && !devDependencies[dep]) {
          dependencies[dep] = version;
          dependenciesChanged = true;
          console.log(`‚úÖ A√±adida dependencia: ${dep}@${version}`);
        }
      }
      
      if (dependenciesChanged) {
        packageJson.dependencies = dependencies;
        fs.writeFileSync(packageJsonPath, JSON.stringify(packageJson, null, 2));
        console.log('‚úÖ Actualizado package.json');
        console.log('‚ö†Ô∏è Ejecuta "npm install" para instalar las nuevas dependencias');
      }
    } catch (err) {
      console.error('‚ùå Error al actualizar package.json:', err);
    }
  }
}

